{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler", // Changed from "node" for better ESM support
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true, // Added to bypass @meteora-ag .d.ts errors
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": [
    "**/*.ts" // Include all .ts files in all subdirectories
  ],
  "exclude": [
    "node_modules"
  ]
}